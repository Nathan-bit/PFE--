<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
<!-- Bootstrap JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>


<style>
  /* General Styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f2f2f2;
}

/* Container Styles */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.content-wrapper {
  background-color: white;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  max-width: 500px;
  width: 90%;
}

/* Typography */
h1 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

p {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 20px;
}

.email {
  font-weight: bold;
  color: black;
}

/* Button Styles */
.button-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

button {
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.logout-btn {
  background-color: #f2f2f2;
  color: #333;
}

.resend-btn {
  background-color: #007bff;
  color: white;
}

.resend-btn:hover {
  background-color: #0056b3;
}
</style>
<div class="container">
  <div class="content-wrapper">
    <h1 style="color:#007bff;">Email Validation</h1>
    <p>Thank you <strong style="color: rgb(0, 0, 0);"> <%= NOM %> </strong> for signing up.</p>
    <p>An email with a validation link was sent to your email <span class="email"> <%= EMAIL %> </span>. Please open your email inbox and click on the validation link to proceed with signing up.</p>
    <p>If you have not received an email, please check your spam folder, or click the "Resend Validation Link Email" button below to have it sent again.</p>
    <div class="button-wrapper">
      <button class="logout-btn" onclick="window.location.href='/connection/login'">Login</button>
      <button class="resend-btn" id="resendBtn" onclick="resendValidationEmail()">Resend Validation Link Email</button>
    </div>
  </div>
</div>



<script>
  function resendValidationEmail() {
    // Disable the button
    document.getElementById('resendBtn').disabled = true;

    // Make an AJAX request to the backend
    fetch('/connection/resendmail', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        NOM: '<%= NOM %>',
        EMAIL: '<%= EMAIL %>'
      })
    })
    .then(response => {
      if (response.ok) {
        // Handle successful response from the backend
        alert('Validation email resent successfully!');
      } else {
        // Handle error response from the backend
        alert('Failed to resend validation email. Please try again later.');
      }

      // Re-enable the button
      document.getElementById('resendBtn').disabled = false;
    })
    .catch(error => {
      // Handle network errors
      console.error('Error:', error);
      alert('An error occurred. Please try again later.');

      // Re-enable the button
      document.getElementById('resendBtn').disabled = false;
    });
  }
</script>