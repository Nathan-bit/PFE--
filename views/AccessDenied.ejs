 <body>
    <div class="custom-container">
       <%-include('./common/sidebar') %>
       <div class="main-content">
          <%-include('./common/navbar') %>
          <hr>
          <div id="flash-message" class="text-center fw-bold " style="width: auto; height: fit-content;"  >
             <% if (messages && messages.error) { %>
