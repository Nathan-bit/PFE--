<div id="flash-message"  class="text-center fw-bold fst-italic ">    
    <% if (messages && messages.error) { %>
      <div  id="flash-message" class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    
    <% if (messages && messages.success) { %>
      <div id="flash-message" class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages && messages.info) { %>
      <div id="flash-message" class="alert alert-warning"><%= messages.info %></div>
    <% } %>
</div>

<script>
    setTimeout(function() {
         var flashMessage = document.getElementById('flash-message');
         if (flashMessage) {
           flashMessage.style.display = 'none';
         }
       }, 5000);
  </script> 