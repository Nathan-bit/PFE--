<style>
  .flash {
    max-width: 100%;
    min-width: fit-content;
  }

  .alert {
    width: 300px; /* Set the width as desired */
    margin: 0 auto; /* Center the alert horizontally */
  }
</style>

<div id="flash-message" class="text-center fw-bold fst-italic flash">
  <% if (messages && messages.error) { %>
    <div class="alert alert-danger flash"><%= messages.error %></div>
  <% } %>

  <% if (messages && messages.success) { %>
    <div class="alert alert-success flash"><%= messages.success %></div>
  <% } %>
  <% if (messages && messages.info) { %>
    <div class="alert alert-warning flash"><%= messages.info %></div>
  <% } %>
</div>

<script>
  setTimeout(function() {
    var flashMessage = document.getElementById('flash-message');
    if (flashMessage) {
      flashMessage.style.display = 'none';
    }
  }, 5000);
</script>
