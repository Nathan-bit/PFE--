
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<% if (data.length > 0) { %>
  <div class="container"> <!-- Center the table within a container -->
    <div class="table-responsive"> <!-- Add this div for better responsiveness -->
      <table class="table table-striped table-bordered"> <!-- Add table-bordered for normal styling -->
        <thead class="thead-dark"> <!-- Dark header for better visibility -->
          <tr>
            <% Object.keys(data[0]).forEach(key => { %>
              <th><%= key %></th>
            <% }); %>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(row => { %>
            <tr>
              <% Object.values(row).forEach(value => { %>
                <td><%= value %></td>
              <% }); %>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
<% } else { %>
  <p><%= tableName %>      has no record  </p>
<% } %>
